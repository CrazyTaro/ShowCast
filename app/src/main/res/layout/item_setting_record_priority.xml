<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_item_setting_record_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/example"/>

    <TextView
        android:id="@+id/tv_item_setting_record_prioritize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_tv_setting_stream"
        android:padding="@dimen/padding_5dp"
        android:text="@string/example"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_item_setting_record_prioritize"
        android:layout_toRightOf="@id/tv_item_setting_record_order"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_setting_record_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/example"
            android:textSize="@dimen/text_size_12sp"/>

        <TextView
            android:id="@+id/tv_item_setting_record_recording"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/example"
            android:textSize="@dimen/text_size_12sp"/>

        <TextView
            android:id="@+id/tv_item_setting_record_conflict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/example"
            android:textSize="@dimen/text_size_12sp"/>

    </LinearLayout>

</RelativeLayout>