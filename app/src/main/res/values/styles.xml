<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/textHint</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dark_black</item>
    </style>

    <style name="AppTheme.Switch" parent="AppTheme">
        <item name="colorAccent">@color/mild_red</item>
        <item name="trackTint">@color/mild_red</item>
    </style>

</resources>
